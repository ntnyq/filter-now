{
  "eslint.enable": true,
  "prettier.enable": true,
  "editor.formatOnSave": true,
  "prettier.configPath": "./prettier.config.mjs",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never",
    "source.sortImports": "never"
  },
  "eslint.validate": [
    "vue",
    "toml",
    "yaml",
    "json",
    "jsonc",
    "json5",
    "markdown",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "cSpell.words": [
    "bumpp",
    "changelogithub",
    "clsx",
    "iconify",
    "kekab",
    "lezer",
    "nocheck",
    "nuxt",
    "pinia",
    "shadcn",
    "shiki",
    "shikijs",
    "sonner",
    "unplugin",
    "unref",
    "vaul",
    "VITE",
    "vitesse",
    "vueuse"
  ]
}
