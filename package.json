{
  "name": "filter-now",
  "type": "module",
  "version": "0.0.4",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "description": "An offline tool help user to add CSS based filter to image and save it.",
  "repository": "ntnyq/filter-now",
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "compile": "vue-tsc --noEmit",
