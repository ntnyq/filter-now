{
  "name": "filter-now",
  "type": "module",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "description": "An offline tool help user to add CSS based filter to image and save it.",
  "repository": "ntnyq/filter-now",
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "compile": "vue-tsc --noEmit",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "lint": "eslint .",
    "postinstall": "wxt prepare",
    "prepare": "husky",
    "release": "bumpp",
    "typecheck": "vue-tsc --noEmit",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "dependencies": {
    "@iconify/json": "^2.2.228",
    "@vueuse/core": "^10.11.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "lucide-vue-next": "^0.408.0",
    "pinia": "^2.1.7",
    "radix-vue": "^1.9.1",
    "vaul-vue": "^0.2.0",
    "vue": "^3.4.31",
    "vue-router": "^4.4.0",
    "vue-sonner": "^1.1.3"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^2.6.0",
    "@ntnyq/prettier-config": "^1.21.2",
    "@vitejs/plugin-vue": "^5.0.5",
    "autoprefixer": "^10.4.19",
    "bumpp": "^9.4.1",
    "eslint": "^9.7.0",
    "husky": "^9.0.11",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.2.2",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "unplugin-icons": "^0.19.0",
    "unplugin-vue-components": "^0.27.2",
    "vue-tsc": "^2.0.26",
    "wxt": "^0.18.14"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,cjs,mjs,vue,md,json,yml,yaml}": "eslint --fix"
  }
}
