{
  "name": "filter-now",
  "type": "module",
  "version": "0.0.4",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "description": "An offline tool help user to add CSS based filter to image and save it.",
  "repository": "ntnyq/filter-now",
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "compile": "vue-tsc --noEmit",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "lint": "eslint .",
    "postinstall": "wxt prepare",
    "prepare": "husky",
    "release": "bumpp",
    "typecheck": "vue-tsc --noEmit",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "dependencies": {
    "@iconify/json": "^2.2.276",
    "@ntnyq/utils": "^0.3.1",
    "@vueuse/core": "^12.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "lucide-vue-next": "^0.461.0",
    "pinia": "^2.2.6",
    "radix-vue": "^1.9.10",
    "shiki": "^1.23.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue-sonner": "^1.3.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.5.1",
    "@ntnyq/prettier-config": "^1.22.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "autoprefixer": "^10.4.20",
    "bumpp": "^9.8.1",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.15",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.2",
    "typescript": "5.6.3",
    "unplugin-icons": "^0.20.1",
    "unplugin-vue-components": "^0.27.4",
    "vue-tsc": "^2.1.10",
    "wxt": "^0.19.16"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,cjs,mjs,vue,md,json,yml,yaml}": "eslint --fix"
  }
