{
  "name": "filter-now",
  "type": "module",
  "version": "0.0.4",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "description": "An offline tool help user to add CSS based filter to image and save it.",
  "repository": "ntnyq/filter-now",
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "compile": "vue-tsc --noEmit",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "lint": "eslint .",
    "postinstall": "wxt prepare",
    "prepare": "husky",
    "release": "bumpp",
    "typecheck": "vue-tsc --noEmit",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "dependencies": {
    "@iconify/json": "^2.2.235",
    "@vueuse/core": "^10.11.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "lucide-vue-next": "^0.427.0",
    "pinia": "^2.2.1",
    "radix-vue": "^1.9.3",
    "shiki": "^1.12.1",
    "vue": "^3.4.37",
    "vue-router": "^4.4.3",
    "vue-sonner": "^1.1.4"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^2.8.1",
    "@ntnyq/prettier-config": "^1.21.2",
    "@vitejs/plugin-vue": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "bumpp": "^9.4.2",
    "eslint": "^9.9.0",
    "husky": "^9.1.4",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.2.2",
    "tailwind-merge": "^2.5.0",
    "tailwindcss": "^3.4.9",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "unplugin-icons": "^0.19.2",
    "unplugin-vue-components": "^0.27.3",
    "vue-tsc": "^2.0.29",
    "wxt": "^0.19.4"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,cjs,mjs,vue,md,json,yml,yaml}": "eslint --fix"
  }
}
