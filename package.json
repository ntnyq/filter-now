    "lint": "eslint .",
    "postinstall": "wxt prepare",
    "prepare": "husky",
    "release": "bumpp",
    "typecheck": "vue-tsc --noEmit",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "dependencies": {
    "@iconify/json": "^2.2.270",
    "@ntnyq/utils": "^0.2.0",
    "@vueuse/core": "^11.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "lucide-vue-next": "^0.456.0",
    "pinia": "^2.2.6",
    "radix-vue": "^1.9.9",
    "shiki": "^1.22.2",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "vue-sonner": "^1.2.5"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.2.0",
    "@ntnyq/prettier-config": "^1.21.3",
    "@vitejs/plugin-vue": "^5.1.5",
    "autoprefixer": "^10.4.20",
    "bumpp": "^9.8.1",
    "eslint": "^9.14.0",
    "husky": "^9.1.6",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "unplugin-icons": "^0.20.1",
    "unplugin-vue-components": "^0.27.4",
    "vue-tsc": "^2.1.10",
    "wxt": "^0.19.13"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,cjs,mjs,vue,md,json,yml,yaml}": "eslint --fix"
  }
